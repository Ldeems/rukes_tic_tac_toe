<%if outcome == "next"%>
    <%try = session[:board].appboard%>
    <%try.each do |a|%>
        <%=a%><br>
    <%end%>
    <br>
    <%if session[:player].player == "o"%>
        <%=session[:p1name]%>s turn
    <%elsif session[:player].player == "x"%>
        <%=session[:p2name]%>s turn 
    <%end%>  
    <br>
    <%open = []%>
    <%session[:board].gboard.each do |a|%>
        <%if a == "o"%>
        <%elsif a == "x"%>
        <%else%>
            <%open << a%>
        <%end%>
    <%end%>
    <br>
    <form method="post" action="update">
    <%open.each do |b|%>
        <input type="radio" name="pick" value="<%=b%>" checked="checked"%><%=b%> 
    <%end%>
    <br>
    <input type="hidden" name="uplayer" value="<%=session[:player].player%>"><%session[:player].player%>
    <input type="submit" name="submit" value="make move">
    </form> 
<%elsif outcome == "WINNER"%>
    <%if session[:player].player == "x"%>
        <%=session[:p1name]%> is the winner
    <%elsif session[:player].player == "o"%>
        <%=session[:p2name]%> is the winner 
    <%end%> <br><br>
    <%try = session[:board].appboard%>
    <%try.each do |a|%>
        <%=a%><br>
    <%end%>
<%elsif outcome == "TIE"%>
    CATS Game<br><br>
    <%try = session[:board].appboard%>
    <%try.each do |a|%>
        <%=a%><br>
    <%end%>
<%end%>        
        



